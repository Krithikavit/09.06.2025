    <title>Weatherii App</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #a8d5ba;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            text-align: center;
        }

        .weather-box {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #a8d5ba;
            padding: 40px 60px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            min-width: 600px;
        }

        .left {
            text-align: left;
        }

        .temp {
            font-size: 60px;
            font-weight: 500;
        }

        .city,
        .time,
        .condition {
            font-size: 20px;
            margin-top: 5px;
        }

        .title {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 30px;
            color: #fff;
        }

        .search-section {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .search-section input {
                padding: 8px 12px;
                font-size: 16px;
                border-radius: 20px;
                border: none;
                outline: none;
                width: 200px;
                background: #fff;
            }

            .search-section button {
                padding: 8px 16px;
                font-size: 16px;
                border-radius: 20px;
                border: none;
                cursor: pointer;
                background-color: white;
            }
    </style>
